<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<ScrollPane fx:id="root" styleClass="back" stylesheets="@addProgram.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.system.create.AddProgramController">
   <content>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="950.0" styleClass="back">
         <center>
            <SplitPane dividerPositions="0.48578595317725753" prefHeight="160.0" prefWidth="200.0" styleClass="back" BorderPane.alignment="CENTER">
               <items>
                  <VBox minWidth="590.0" prefHeight="200.0" prefWidth="500.0" styleClass="back">
                     <children>
                        <TableView fx:id="newInstructionTbl" prefHeight="200.0" prefWidth="550.0">
                          <columns>
                            <TableColumn fx:id="colNumber" prefWidth="50.0" text="number" />
                              <TableColumn fx:id="colLabel" prefWidth="50.0" text="Label" />
                              <TableColumn fx:id="colVariable" prefWidth="60.0" text="Variable" />
                              <TableColumn fx:id="colName" prefWidth="100.0" text="Instruction name" />
                              <TableColumn fx:id="colAdditionalVariable" prefWidth="110.0" text="additional variable" />
                              <TableColumn fx:id="colAdditionalLabel" prefWidth="110.0" text="additionalLabel" />
                              <TableColumn fx:id="colConstantValue" prefWidth="110.0" text="constant value" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox minWidth="300.0" prefHeight="200.0" prefWidth="100.0" styleClass="back">
                     <children>
                        <Label styleClass="title" text="Instruction name:">
                           <padding>
                              <Insets left="3.0" top="3.0" />
                           </padding>
                        </Label>
                        <ComboBox fx:id="instructionNameCbox" onAction="#onSelectedInstructionName" prefWidth="150.0">
                           <padding>
                              <Insets left="3.0" top="3.0" />
                           </padding>
                        </ComboBox>
                        <Label styleClass="args-title" text="Main arguments: ">
                           <padding>
                              <Insets left="3.0" top="5.0" />
                           </padding>
                        </Label>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="7.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                                 <children>
                                    <Label styleClass="argument" text="Variable type:" />
                                    <ChoiceBox fx:id="variableCbox" prefWidth="150.0" styleClass="cBox" />
                                    <TextField fx:id="mainVariableTF" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                                 <children>
                                    <Label styleClass="argument" text="Label (L*\EXIT):" />
                                    <ChoiceBox fx:id="labelCbox" prefWidth="150.0" styleClass="cBox" />
                                    <TextField fx:id="mainLabelTF" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets left="3.0" top="3.0" />
                           </padding>
                        </HBox>
                        <Label fx:id="additionalArgsLbl" styleClass="args-title" text="Additional arguments:">
                           <padding>
                              <Insets left="3.0" />
                           </padding>
                        </Label>
                        <HBox fx:id="additionalArgsRow" prefHeight="100.0" prefWidth="200.0" spacing="7.0">
                           <children>
                              <VBox fx:id="additionalVariableVbox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                                 <children>
                                    <Label styleClass="argument" text="Variable type:" />
                                    <ChoiceBox fx:id="additionalVariableCbox" prefWidth="150.0" styleClass="cBox" />
                                    <TextField fx:id="additionalVariableTF" />
                                 </children>
                              </VBox>
                              <VBox fx:id="additionalLabelVbox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                                 <children>
                                    <Label styleClass="argument" text="Label (L*\EXIT):" />
                                    <ChoiceBox fx:id="additionalLabelCbox" prefWidth="150.0" styleClass="cBox" />
                                    <TextField fx:id="additionalLabelTF" />
                                 </children>
                              </VBox>
                              <VBox fx:id="additionalConstantVbox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                                 <children>
                                    <Label styleClass="argument" text="Constant Value:" />
                                    <TextField fx:id="constantValueTF" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets left="3.0" top="3.0" />
                           </padding>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="7.0">
                           <children>
                              <Button id="add-instruction-btn" fx:id="addInstructionButton" mnemonicParsing="false" onAction="#onBtnAddInstructionListener" text="Add instruction" />
                           </children>
                           <padding>
                              <Insets left="3.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </items>
            </SplitPane>
         </center>
         <top>
            <HBox prefHeight="50.0" prefWidth="200.0" spacing="5.0" styleClass="back" BorderPane.alignment="CENTER">
               <children>
                  <Label styleClass="title" text="New Program Name: " />
                  <TextField fx:id="programNameTF" />
                  <Button id="upload-program-btn" fx:id="uploadProgramBtn" mnemonicParsing="false" onAction="#onBtnUploadProgramListenter" text="upload program" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </content>
</ScrollPane>
