<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="270.0" prefWidth="550.0" stylesheets="@history.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.component.history.HistoryController">
   <children>
      <Label styleClass="history-title" text="History \ Statistics">
         <padding>
            <Insets left="3.0" top="3.0" />
         </padding></Label>
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0">
        <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="historyRunsTable" maxWidth="600.0" minWidth="300.0" onMouseClicked="#onHistoryRunSelectedListener" prefHeight="200.0" prefWidth="400.0">
                    <columns>
                      <TableColumn fx:id="runNumberCol" prefWidth="75.0" text="Run Number" />
                      <TableColumn fx:id="degreeCol" prefWidth="75.0" text="Degree" />
                        <TableColumn fx:id="resultYCol" prefWidth="75.0" text="y" />
                        <TableColumn fx:id="cyclesCol" prefWidth="75.0" text="Cycles" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox fx:id="vboxVariablesStatus" prefHeight="200.0" prefWidth="100.0" visible="false">
               <children>
                  <Label fx:id="chosenRunVariablesLbl" styleClass="sub-title" text="Chosen Run Variables status">
                     <padding>
                        <Insets left="3.0" top="3.0" />
                     </padding>
                  </Label>
                  <TableView fx:id="variablesStatusTable" maxWidth="400.0" minWidth="150.0" prefHeight="200.0" prefWidth="100.0">
                    <columns>
                      <TableColumn fx:id="variableNameCol" prefWidth="75.0" text="Name" />
                      <TableColumn fx:id="variableValueCol" prefWidth="75.0" text="Value" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
        </items>
      </SplitPane>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <Button fx:id="btnShowStatus" mnemonicParsing="false" onAction="#onShowStatusListener" styleClass="history-button" text="Show Status" visible="false" />
            <Button fx:id="btnReRun" mnemonicParsing="false" onAction="#onReRunButtonListener" styleClass="history-button" text="Re-run" visible="false" />
         </children>
         <padding>
            <Insets left="3.0" top="3.0" />
         </padding>
      </HBox>
   </children>
</VBox>
