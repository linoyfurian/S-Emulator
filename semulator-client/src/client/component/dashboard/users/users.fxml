<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="570.0" spacing="3.0" stylesheets="@users.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.component.dashboard.users.UsersController">
   <children>
      <Label styleClass="sub-title" text="Available Users:">
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
      <TableView fx:id="availableUsersTbl" onMouseClicked="#onUserSelectedListener" prefHeight="150.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="availableUsersColName" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="availableUsersColProgramsNumber" prefWidth="118.0" text="Programs Number" />
            <TableColumn fx:id="availableUsersColFunctionsNumber" prefWidth="110.0" text="Functions Number" />
            <TableColumn fx:id="availableUsersColCredits" prefWidth="75.0" text="Credits" />
            <TableColumn fx:id="availableUsersColUsedCredit" prefWidth="100.0" text="Used Credits" />
            <TableColumn fx:id="availableUsersColRunsNumber" prefWidth="90.0" text="Runs Number" />
        </columns>
      </TableView>
      <HBox>
         <children>
            <Button fx:id="unselectUserBtn" mnemonicParsing="false" onAction="#onUnselectedUserBtnListener" text="Unselect User" />
         </children>
         <padding>
            <Insets left="5.0" />
         </padding>
      </HBox>
      <Label alignment="CENTER" styleClass="sub-title" text="Users History\Statistics Table:">
         <padding>
            <Insets left="5.0" />
         </padding>
      </Label>
      <TableView fx:id="historyTbl" onMouseClicked="#onSelectedHistoryRunListener" prefHeight="150.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="historyRunNumberCol" prefWidth="75.0" text="Run Number" />
          <TableColumn fx:id="historyIsProgramCol" prefWidth="109.0" text="Program\Function" />
            <TableColumn fx:id="historyNameCol" prefWidth="108.0" text="Name" />
            <TableColumn fx:id="historyArchitectureCol" prefWidth="109.0" text="Architecture type" />
            <TableColumn fx:id="historyDegreeCol" prefWidth="51.0" text="Degree" />
            <TableColumn fx:id="historyResultCol" prefWidth="45.0" text="y" />
            <TableColumn fx:id="historyCyclesCol" prefWidth="72.0" text="Cycles" />
        </columns>
      </TableView>
      <HBox spacing="3.0">
         <children>
            <Button fx:id="showStatusBtn" mnemonicParsing="false" onAction="#onShowStatusBtnListener" text="Show status" visible="false">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="reRunBtn" mnemonicParsing="false" onAction="#onReRunBtnListener" text="Re-Run" visible="false" />
         </children>
         <padding>
            <Insets bottom="3.0" left="5.0" />
         </padding>
      </HBox>
      <VBox fx:id="showStatusVariablesVbox" spacing="3.0" visible="false">
         <children>
            <Label fx:id="chosenRunVariablesLbl" styleClass="sub-title" text="Chosen Run Variables status">
               <padding>
                  <Insets left="3.0" top="3.0" />
               </padding>
            </Label>
            <TableView fx:id="variablesStatusTable" maxWidth="180.0" minWidth="150.0" prefHeight="150.0" prefWidth="100.0">
               <columns>
                  <TableColumn fx:id="variableNameCol" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="variableValueCol" prefWidth="75.0" text="Value" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" />
         </padding>
      </VBox>
   </children>
</VBox>
