<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="debuggerRoot" maxHeight="500.0" maxWidth="-Infinity" minHeight="-Infinity" minWidth="500.0" prefHeight="300.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.component.execution.debugger.DebuggerController">
    <children>
        <Label id="debugger-title" text="Debugger\Execution" textAlignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="180.0" top="5.0" />
            </padding>
            <opaqueInsets>
                <Insets left="80.0" />
            </opaqueInsets>
        </Label>
        <HBox maxHeight="30.0" minHeight="40.0" minWidth="200.0" prefHeight="40.0" prefWidth="400.0" spacing="3.0" VBox.vgrow="ALWAYS">
            <children>
                <Button mnemonicParsing="false" styleClass="execution-button" text="New run" />
                <Button id="run-button" fx:id="runBtn" mnemonicParsing="false" text="Run" />
                <VBox prefHeight="200.0" prefWidth="70.0" spacing="3.0">
                    <children>
                        <RadioButton fx:id="radioBtnRegular" mnemonicParsing="false" selected="true" text="regular">
                            <toggleGroup>
                                <ToggleGroup fx:id="runModeGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioBtnDebug" mnemonicParsing="false" text="debug" toggleGroup="$runModeGroup" />
                    </children>
                </VBox>
                <Button fx:id="stopBtn" disable="true" mnemonicParsing="false" styleClass="execution-button" text="Stop" />
                <Button fx:id="resumeBtn" disable="true" mnemonicParsing="false" styleClass="execution-button" text="Resume" />
                <Button fx:id="stepOverBtn" disable="true" mnemonicParsing="false" styleClass="execution-button" text="Step over" />
                <Button fx:id="stepBackBtn" disable="true" mnemonicParsing="false" styleClass="execution-button" text="Step Back" />
            </children>
            <padding>
                <Insets left="3.0" />
            </padding>
        </HBox>
        <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <items>
                <VBox prefHeight="200.0" prefWidth="100.0" styleClass="panel-left">
                    <children>
                        <Label styleClass="panel-title" text="Variables:">
                            <padding>
                                <Insets left="3.0" />
                            </padding>
                        </Label>
                        <TableView fx:id="variablesTable" maxWidth="170.0" prefHeight="200.0" prefWidth="150.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="nameCol" prefWidth="85.0" text="name" />
                                <TableColumn fx:id="valueCol" prefWidth="85.0" text="value" />
                            </columns>
                        </TableView>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Label styleClass="sub-title-panel" text="Cycles: " HBox.hgrow="ALWAYS" />
                                <Label id="cycles-value" fx:id="cyclesLabel" text="0" />
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <padding>
                                <Insets left="5.0" top="3.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="3.0" />
                    </padding>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" styleClass="panel-right">
                    <children>
                        <Label styleClass="panel-title" text="Execution Inputs:" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets left="3.0" />
                            </padding>
                        </Label>
                        <ScrollPane fx:id="inputsScroll" fitToWidth="true" prefHeight="250.0" prefWidth="250.0" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="inputsContainer" prefHeight="250.0" prefWidth="250.0" spacing="8" />
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets left="3.0" />
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
